<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link rel="stylesheet" href="main.css">
  </head>
  <body>
    <main id="wrapper">
      <a class="links" href="/forHire">Robots for Hire</a>
      <a class="links" href="/">All Robots</a>
      <a class="links" href="/workingRobots">Working Robots</a>
      {{#users}}
      <div id="users">
        <a href="/profile/{{id}}">
          <img src="{{avatar}}">
          <h2>{{name}}</h2>
          {{#job}}
          <p>{{job}}, {{company}}</p>
          {{/job}}
          {{^job}}
          <p id="unemployed">Available for hire</p>
          {{/job}}
        </a>
      </div>
      {{/users}}
    </main>
  </body>
</html>
